# Railway Production Environment Variables
# Copy these to Railway Dashboard -> Variables

APP_NAME=penStashem
APP_ENV=production
APP_DEBUG=false
APP_URL=https://penstashem.up.railway.app

# Database (already set in Railway)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}
DB_SSLMODE=require

# Session Configuration (IMPORTANT for CSRF)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.penstashem.up.railway.app
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache & Queue
CACHE_STORE=database
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Mail
MAIL_MAILER=log

# Trust Railway proxy for HTTPS
TRUSTED_PROXIES=*
